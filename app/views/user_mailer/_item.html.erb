<% quantity = item['quantity'].to_i %>

<tr>
  <td>
    <%= image_tag item.product.image.tiny %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= item.product.price %>
  </td>
  <td>
    <%= quantity %>
  </td>
  <td>
    <%= item_total = item.product.price * quantity %>
  </td>
</tr>