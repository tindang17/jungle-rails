<header class="page-header">
  <h1>Order #<%= @order.id %></h1>
</header>

<div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="2">Product</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>
        <%= render 'item', item: item %>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
      <th colspan="4">
        TOTAL:
      </th>
      <th>
        <%= @order.total %>
      </th>
      </tr>
    </tfoot>
  </div>

